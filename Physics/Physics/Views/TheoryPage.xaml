<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Physics.Views.TheoryPage" Title="Теория">
    <ContentPage.Content>
        <StackLayout Background="#00836e" Padding="5">
            <Picker x:Name="SectionPicker" Title="Выберите раздел" TextColor="White" ItemDisplayBinding="{Binding TitleChapter}" SelectedIndexChanged="SectionPickerSelectedIndexChanged"/>
            <Picker x:Name="ChapterPicker" Title="Сначала выберите раздел" TextColor="White" ItemDisplayBinding="{Binding TitleChapter}" SelectedIndexChanged="ChapterPickerSelectedIndexChanged" IsEnabled="False"/>
            <Picker x:Name="ParagraphPicker" Title="Сначала выберите раздел и главу" TextColor="White" ItemDisplayBinding="{Binding TitleChapter}" SelectedIndexChanged="ParagraphPickerSelectedIndexChanged" IsEnabled="False"></Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>