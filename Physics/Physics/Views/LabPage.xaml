<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Physics.Views.LabPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="LabsListView" BackgroundColor="#00836e" RowHeight="100" SeparatorColor="DeepSkyBlue">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Button Text="{Binding TitleLabWork}" Clicked="OnButtonClicked" Grid.Column="0"/>
                                <Label Text="{Binding DescriptionLabWork}" TextColor="Beige" IsVisible="False" Grid.Column="1"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>