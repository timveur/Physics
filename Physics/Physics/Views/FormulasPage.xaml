<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Physics.Views.FormulasPage"
             Title="Формулы">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="FormulasListView" BackgroundColor="#00836e" RowHeight="150" SeparatorColor="DeepSkyBlue">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ContentView Padding="15,5,0,0">
                                <Grid VerticalOptions="CenterAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Text="{Binding TitleFormula}" TextColor="Beige" VerticalOptions="StartAndExpand" FontSize="16"/>
                                    <Image Grid.Row="1" Source="{Binding PhotoFormulaPath}" VerticalOptions="EndAndExpand"/>
                                </Grid>
                            </ContentView>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>